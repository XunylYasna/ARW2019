<div id="particles">
    <div id = "register" class="container content">
        <form class="register-form validate-form col-md-6 col-md-offset-3">
            <fieldset id="personal_fs" class="register-set">
                <h4 class = "brand title m-b"> 
                Tell us about yourself!
                </h4>
                <div class="wrap-input validate-input m-b" data-validate="Enter your ID Number">
                    <input class="input" type="text" name="id_number">
                    <span class="focus-input" data-placeholder="ID Number (e.g. 11201234)"></span>
                </div>

                <div class="inline">
                    <div class="wrap-input validate-input m-b" data-validate="Required">
                        <input class="input" type="text" name="last_name">
                        <span class="focus-input" data-placeholder="Last Name"></span>
                    </div>

                    <div class="wrap-input validate-input m-b" data-validate = "Required">
                        <input class="input" type="text" name="first_name">
                        <span class="focus-input" data-placeholder="Given Name"></span>
                    </div>

                    <div class="wrap-input validate-input m-b" data-validate="Required">
                        <input class="input" type="text" name="middle_name">
                        <span class="focus-input" data-placeholder="Middle Name"></span>
                    </div>
                </div>

                <div class="m-b">
                    Degree Program
                    <select class="form-control" name="course" data-live-search="true">
                        <option value="BSCS">BSCS</option>
                        <option value="BSIT">BSIT</option>
                        <option value="BSCS-ST">BSCS-ST</option>
                        <option value="BSCS-NE">BSCS-NE</option>
                        <option value="BSCS-IST">BSCS-IST</option>
                        <option value="BSCS-CSE">BSCS-CSE</option>
                        <option value="BS-INSYS">BS-INSYS</option>
                        <option value="IET-GD2">IET-GD2</option>
                        <option value="IET-AD2">IET-AD2</option>
                        <option value="IET-GDS">IET-GDS</option>
                        <option value="IET-ADS">IET-ADS</option>
                        <option value="CSS">CSS</option>
                        <option value="BSMSCS">BSMSCS</option>
                    </select>
                </div>
                <input type="button" name="next" class="next action-button" value="Next"/>
            </fieldset>

            <fieldset id="contact_fs" class="register-set">
                <h4 class = "brand title m-b"> 
                Your Contact Information
                </h4>
                <div class="wrap-input validate-input m-b" data-validate="Input must be a valid number.">
                    <input class="input" type="text" name="contact_number">
                    <span class="focus-input" data-placeholder="Contact Number (e.g. 09061234567)"></span>
                </div>

                <div class="wrap-input validate-input m-b" data-validate="Required">
                    <input class="input" type="text" name="facebook_name">
                    <span class="focus-input" data-placeholder="Facebook Name"></span>
                </div>

                <div class="wrap-input validate-input m-b" data-validate="Email must end in @dlsu.edu.ph">
                    <input class="input" type="email" name="dlsu_mail">
                    <span class="focus-input" data-placeholder="DLSU email"></span>
                </div>
                <input type="button" name="previous" class="previous action-button-previous" value="Previous"/>
                <input type="button" name="next" class="next action-button" value="Next"/>
            </fieldset>
                
            <fieldset id="membership_fs" class="register-set">
                <div class = "radio-btn-container">
                    <h4 class = "brand title m-b"> 
                    I am...
                    </h4>
                    <div class="radio-btn">
                        <input type="radio" name="is_officer" id="officer-radio" />
                        <label for="officer-radio">an officer of LSCS.</label>
                    </div>
                    <div class="radio-btn">
                        <input type="radio" name="is_officer" id="member-radio" checked/>
                        <label for="member-radio">a member of LSCS.</label>
                    </div>
                </div>
                <input type="button" name="previous" class="previous action-button-previous" value="Previous"/>
                <input type="button" name="next" class="next action-button" value="Next"/>
            </fieldset>

            <fieldset id="reciept_fs" class="register-set">
                <h4 class = "brand title m-b"> 
                Payment
                </h4>
                <p>
                    Please pay the amount below to the nearest officer. After paying, enter the reciept
                    below and click submit to finish.
                </p>
                <h5>
                    Total: P 230 (Old Member)
                </h5>
                <div class="wrap-input validate-input m-b" data-validate="Required">
                    <input class="input" type="text" name="receipt_number">
                    <span class="focus-input" data-placeholder="Reciept Number"></span>
                </div>
                <input type="button" name="previous" class="previous action-button-previous" value="Previous"/>
                <input type="submit" name="submit" class="submit action-button" value="Submit"/>
            </fieldset>
        </form>
    </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>
<script src="/js/form.js"></script>