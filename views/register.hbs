<div id="particles" class="registration">
    <div id = "register" class="container content">
        <form class="register-form validate-form col-md-6 col-md-offset-3">
            <fieldset id="personal_fs" class="register-set">
                <h4 class = "brand title m-b"> 
                Tell us about yourself! 
                </h4>
                <div class="wrap-input validate-input m-b" data-validate="Enter your ID Number">
                    <input class="input" type="text" name="id_number">
                    <span class="focus-input" data-placeholder="ID Number (e.g. 11201234)"></span>
                </div>

                <div class="inline">
                    <div class="wrap-input validate-input m-b" data-validate="Required">
                        <input class="input" type="text" name="last_name">
                        <span class="focus-input" data-placeholder="Last Name"></span>
                    </div>

                    <div class="wrap-input validate-input m-b" data-validate = "Required">
                        <input class="input" type="text" name="first_name">
                        <span class="focus-input" data-placeholder="Given Name"></span>
                    </div>

                    <div class="wrap-input validate-input m-b" data-validate="Required">
                        <input class="input" type="text" name="middle_name">
                        <span class="focus-input" data-placeholder="Middle Name"></span>
                    </div>
                </div>

                <div class="m-b">
                    <label for="course">Degree Program</label>
                    <select id="course" class="form-control" name="course" data-live-search="true">
                        <option value="BSCS">BSCS</option>
                        <option value="BSIT">BSIT</option>
                        <option value="BSCS-ST">BSCS-ST</option>
                        <option value="BSCS-NE">BSCS-NE</option>
                        <option value="BSCS-IST">BSCS-IST</option>
                        <option value="BSCS-CSE">BSCS-CSE</option>
                        <option value="BS-INSYS">BS-INSYS</option>
                        <option value="IET-GD2">IET-GD2</option>
                        <option value="IET-AD2">IET-AD2</option>
                        <option value="IET-GDS">IET-GDS</option>
                        <option value="IET-ADS">IET-ADS</option>
                        <option value="CSS">CSS</option>
                        <option value="BSMSCS">BSMSCS</option>
                    </select>
                </div>
                <input type="button" name="next" class="next action-button" value="Next"/>
            </fieldset>

            <fieldset id="contact_fs" class="register-set">
                <h4 class = "brand title m-b"> 
                Your Contact Information
                </h4>
                <div class="wrap-input validate-input m-b" data-validate="Input must be a valid number.">
                    <input class="input" type="text" name="contact_number">
                    <span class="focus-input" data-placeholder="Contact Number (e.g. 09061234567)"></span>
                </div>

                <div class="wrap-input validate-input m-b" data-validate="Required">
                    <input class="input" type="text" name="facebook_name">
                    <span class="focus-input" data-placeholder="Facebook Name"></span>
                </div>

                <div class="wrap-input validate-input m-b" data-validate="Email must end in @dlsu.edu.ph">
                    <input class="input" type="email" name="dlsu_mail">
                    <span class="focus-input" data-placeholder="DLSU email"></span>
                </div>
                <input type="button" name="previous" class="previous action-button-previous" value="Previous"/>
                <input type="button" name="next" class="next action-button" value="Next"/>
            </fieldset>
                
            <fieldset id="membership_fs" class="register-set">
                <div class = "radio-btn-container">
                    <h4 class = "brand title m-b"> 
                    I am...
                    </h4>
                    <div class="radio-btn">
                        <input type="radio" name="is_officer" value="true" id="officer-radio" />
                        <label for="officer-radio">an officer of LSCS.</label>
                    </div>
                    <div class="radio-btn">
                        <input type="radio" name="is_officer" value="false" id="member-radio" checked/>
                        <label for="member-radio">a member of LSCS.</label>
                    </div>
                </div>
                <div id = "officer-pos-ctnr" class="m-b">
                    <label for="officer-pos">Position</label>
                    <select id="officer-pos" class="form-control" name="officer_position" data-live-search="true">
                        <optgroup label="Internals">
                            <option value="VP Research and Development" selected>VP Research and Development</option>
                            <option value="AVP Research and Development">AVP Research and Development</option>
                            <option value="VP Human Resource Development">VP Human Resource Development</option>
                            <option value="AVP Human Resource Development">AVP Human Resource Development</option>
                            <option value="VP Academics">VP Academics</option>
                            <option value="AVP Academics">AVP Academics</option>
                            <option value="VP Training and Development">VP Training and Development</option>
                            <option value="AVP Training and Development">AVP Training and Development</option>
                        </optgroup>

                        <optgroup label="Externals">
                            <option value="VP Corporate Relations">VP Corporate Relations</option>
                            <option value="AVP Corporate Relations">AVP Corporate Relations</option>
                            <option value="VP Publications">VP Publications</option>
                            <option value="AVP Publications">AVP Publications</option>
                            <option value="VP Publicity and Creatives">VP Publicity and Creatives</option>
                            <option value="AVP Publicity and Creatives">AVP Publicity and Creatives</option>
                            <option value="VP Socio-civic">VP Socio-civic</option>
                            <option value="AVP Socio-civic">AVP Socio-civic</option>
                            <option value="VP University Relations">VP University Relations</option>
                            <option value="AVP University Relations">AVP University Relations</option>
                        </optgroup>
                        <optgroup label="Operations">
                            <option value="VP Documentations and Logistics">VP Documentations and Logistics</option>
                            <option value="AVP Documentations and Logistics">AVP Documentations and Logistics</option>
                            <option value="VP Finance">VP Finance</option>
                            <option value="AVP Finance">AVP Finance</option>
                        </optgroup>
                        <optgroup label="Core">
                            <option value="President">President</option>
                            <option value="EVP Internals">EVP Internals</option>
                            <option value="EVP Externals">EVP Externals</option>
                            <option value="EVP Operations">EVP Operations</option>
                        </optgroup>
                    </select>
                </div>
                <input type="hidden" id="member_type" name="member_type">
                <input type="button" name="previous" class="previous action-button-previous" value="Previous"/>
                <input type="button" name="next" class="next action-button" value="Next"/>

            </fieldset>

            <fieldset id="receipt_fs" class="register-set">
                <h4 class = "brand title m-b"> 
                Payment
                </h4>
                <p>
                    Please pay the amount below to the nearest officer. After paying, enter the receipt
                    below and click submit to finish.
                </p>
                <h5 id = 'total' class="m-b">
                    Total: P 230 (Old Member)
                </h5>
                <div class="wrap-input validate-input m-b" data-validate="Number must be 5 digits">
                    <input class="input" type="text" name="receipt_number">
                    <span class="focus-input" data-placeholder="receipt Number"></span>
                </div>
                <input type="button" name="previous" class="previous action-button-previous" value="Previous"/>
                <input type="submit" name="submit" class="submit action-button" value="Submit"/>
            </fieldset>
            <fieldset id="done_fs" class="register-set">
                <h4 class = "brand title m-b"> 
                Thanks for your time!
                </h4>
                <p>
                    Hope to see more of you soon!
                    Applications for Junior officership will be open form startdate to enddate.
                </p>
                <a href="/" name="done_btn" class="action-button" value="continue">Continue</a>
            </fieldset>
        </form>
    </div>
</div>
<script src="/js/jquery.easing.1.3.js"></script>
