<style>
    .brand.title.error {
        color: var(--red);
        font-size: 24px;
    }

    #error .brand.error-message {
        color: var(--light-red);
        font-size: 20px;
        margin: 10px 0px;
        padding: 0;
        white-space: pre-wrap;
    }
</style>
