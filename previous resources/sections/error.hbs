        <p class = "brand error-message">\{{ message }}</p>
        <button @click = "close" class = "button brand"> Okay </button>

        <button @click= "close" class = "button brand close-modal">
            <img src="./resources/cancel.svg" width="20px" height="20px">
        </button>
    </div>
