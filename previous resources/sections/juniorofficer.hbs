<script>
    var juniorofficer = new Vue ({
        el: "#juniorofficer",
        methods: {
            exit: function (event) {
                closeCurrentModal()
            },
            applied: function(event) {
                form_register.saveData(true)
                closeCurrentModal()
            },
            did_not_apply: function(event) {
                form_register.saveData(false)
                closeCurrentModal()
            }
        }
    })

    
    $(forms[questions.current]).show()
</script>