<div id = "juniorofficer" class = "brand modal"> 
    <div class = "background"> </div>
    <div class = "main"> 
        <div class = "brand hr blue"> </div>
        <div class = "brand hr yellow"> </div>
        <img src="./resources/macky.png" width="400px" > 
        <h4 class = "brand title">  Hiya new member of LSCS! </h4>
        <label class = "brand label center">
